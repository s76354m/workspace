<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body>
<%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-4">
      <div class="text-center">
        <h1>Simulation Setup</h1>
      </div>
      <form id="simulation-setup-form" method="POST" action="/start-simulation">
        <div class="row">
          <div class="col-md-6">
            <h3>Allies</h3>
            <div id="allies-tank-selection">
              <!-- Tank selection for Allies will be dynamically populated here -->
            </div>
          </div>
          <div class="col-md-6">
            <h3>Axis</h3>
            <div id="axis-tank-selection">
              <!-- Tank selection for Axis will be dynamically populated here -->
            </div>
          </div>
        </div>
        <div class="form-group mt-4">
          <label for="map-selection">Select Map:</label>
          <select id="map-selection" name="map" class="form-control">
            <!-- Map options will be dynamically populated here -->
          </select>
        </div>
        <div class="form-group mt-4">
          <label for="tank-positioning">Position Tanks:</label>
          <div id="tank-positioning">
            <!-- Tank positioning interface will be dynamically populated here -->
          </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Start Simulation</button>
      </form>
    </main>
<%- include('partials/_footer.ejs') %>
  <script src="/js/simulationSetup.js"></script>
</html>